' Define default colors and styles
!define RECTANGLE_COLOR #A9DCDF
!define ACTOR_COLOR #FAC898
!define USECASE_COLOR #E1D5E7

' Apply styles to different UML elements
skinparam rectangle {
    BackgroundColor RECTANGLE_COLOR
    BorderColor Black
    FontName "Times New Roman"
    FontSize 12
}

skinparam actor {
    BackgroundColor ACTOR_COLOR
    FontName "Times New Roman"
    FontSize 12
}

skinparam usecase {
    BackgroundColor USECASE_COLOR
    FontName "Times New Roman"
    FontSize 12
}

' Define styles for other elements in Times New Roman font
skinparam {
    DefaultFontName "Times New Roman"
    ActivityFontName "Times New Roman"
    BackgroundColor White
    ArrowColor Black
    ActorBorderColor Black
    ActorBackgroundColor White
    BoxBorderColor Black
    BoxBackgroundColor White
    UsecaseBorderColor Black
